<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quyetchu.trainninggithub.MainActivity">


    <ImageView
        android:id="@+id/ivUser"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_toRightOf="@+id/ivUser"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chu Nguyen Quyet"/>

    <TextView
        android:id="@+id/tvJob"
        android:layout_alignBottom="@+id/ivUser"
        android:layout_toRightOf="@+id/ivUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"/>

    <ImageView
        android:id="@+id/ivCompaly"
        android:layout_alignBaseline="@+id/ivUser"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvCompaly"
        android:layout_toLeftOf="@+id/ivCompaly"
        android:layout_alignTop="@+id/ivCompaly"
        android:layout_alignBottom="@id/ivCompaly"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vnext"/>

    <ListView
        android:id="@+id/lvListStatus"
        android:layout_below="@+id/ivUser"
        android:layout_above="@+id/etStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <EditText
        android:id="@+id/etStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ibAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhap status ..."/>

    <ImageButton
        android:id="@+id/ibAdd"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/etStatus"
        android:layout_alignTop="@+id/etStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_add"/>

</RelativeLayout>
