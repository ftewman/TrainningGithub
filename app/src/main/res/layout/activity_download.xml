<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quyetchu.trainninggithub.DownloadActivity">

    <EditText
        android:id="@+id/etLinkDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_link_download"/>

    <Button
        android:id="@+id/btnDownload"
        android:layout_below="@+id/etLinkDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_download"/>

    <ProgressBar
        android:id="@+id/pbDownload"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="9"
        android:layout_below="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvPercentDownload"
        android:layout_below="@+id/pbDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_percent_download"/>


</RelativeLayout>
